{% extends 'base.html.twig' %}

{% block body %}
    <h1>Etablissements list</h1>

    <table>
        <thead>
            <tr>
                <th>Nometab</th>
                <th>Numetab</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for etablissement in etablissements %}
            <tr>
                <td><a href="{{ path('etablissement_show', { 'numetab': etablissement.numetab }) }}">{{ etablissement.nometab }}</a></td>
                <td>{{ etablissement.numetab }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('etablissement_show', { 'numetab': etablissement.numetab }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('etablissement_edit', { 'numetab': etablissement.numetab }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('etablissement_new') }}">Create a new etablissement</a>
        </li>
    </ul>
{% endblock %}
