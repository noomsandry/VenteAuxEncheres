{% extends 'base.html.twig' %}

{% block body %}
    <h1>Produits list</h1>

    <table>
        <thead>
            <tr>
                <th>Designationprod</th>
                <th>Numprod</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for produit in produits %}
            <tr>
                <td><a href="{{ path('produit_show', { 'numprod': produit.numprod }) }}">{{ produit.designationprod }}</a></td>
                <td>{{ produit.numprod }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('produit_show', { 'numprod': produit.numprod }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('produit_edit', { 'numprod': produit.numprod }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('produit_new') }}">Create a new produit</a>
        </li>
    </ul>
{% endblock %}
